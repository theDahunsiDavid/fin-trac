# FinTrac Environment Configuration

# Database Implementation
# Set to "true" to use PouchDB (with sync capabilities)
# Set to "false" to use Dexie (local-only IndexedDB)
# Default: true (PouchDB with sync enabled for Phase 4)
VITE_USE_POUCHDB=true

# PouchDB Configuration (only used when VITE_USE_POUCHDB=true)
# Local database name
VITE_POUCHDB_LOCAL_NAME=fintrac

# Remote CouchDB URL for sync
VITE_COUCHDB_URL=http://localhost:5984/fintrac

# CouchDB Authentication
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=password

# Sync Configuration
# Enable continuous sync (true/false)
VITE_SYNC_LIVE=true

# Enable retry on sync failure (true/false)
VITE_SYNC_RETRY=true

# Sync heartbeat interval in milliseconds
VITE_SYNC_HEARTBEAT=10000

# Sync timeout in milliseconds
VITE_SYNC_TIMEOUT=20000

# Auto-start sync on app load
VITE_SYNC_AUTO_START=true

# Application Configuration
# App name for database identification
VITE_APP_NAME=FinTrac

# Environment (development, staging, production)
VITE_APP_ENV=development

# Debug mode for additional logging
VITE_DEBUG=false
