# Production Environment Configuration for FinTrac
# This file contains environment variables for production deployment

# Database Configuration - Use Dexie for reliable local-first operation
VITE_USE_POUCHDB=false

# CouchDB Configuration (for future sync implementation via REST API)
VITE_COUCHDB_URL=https://your-couchdb-instance.com/fintrac
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=your_secure_password

# Application Configuration
VITE_APP_NAME=FinTrac
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_SYNC=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_LOGS=false

# Security Settings
VITE_ENABLE_ENCRYPTION=true
VITE_SESSION_TIMEOUT=3600000

# Performance Settings
VITE_CACHE_DURATION=86400000
VITE_MAX_TRANSACTIONS_PER_SYNC=1000
