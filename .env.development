# Development Environment Configuration for FinTrac
# This file contains environment variables for local development

# Database Configuration - Use Dexie for reliable local-first operation
VITE_USE_POUCHDB=false

# CouchDB Configuration (for testing sync via REST API)
VITE_COUCHDB_URL=http://localhost:5984/fintrac
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=password

# Application Configuration
VITE_APP_NAME=FinTrac Dev
VITE_APP_VERSION=1.0.0-dev
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_SYNC=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_LOGS=true

# Development Settings
VITE_HOT_RELOAD=true
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API_DELAY=500

# Security Settings (relaxed for development)
VITE_ENABLE_ENCRYPTION=false
VITE_SESSION_TIMEOUT=86400000

# Performance Settings (optimized for development)
VITE_CACHE_DURATION=60000
VITE_MAX_TRANSACTIONS_PER_SYNC=100

# Debug Configuration
VITE_LOG_LEVEL=debug
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable sync functionality
VITE_SYNC_ENABLED=true

# CouchDB configuration
VITE_COUCHDB_URL=http://localhost:5984
VITE_COUCHDB_DATABASE=fintrac-test
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=password

# Sync settings
VITE_SYNC_INTERVAL=10000
VITE_SYNC_BATCH_SIZE=10
VITE_SYNC_AUTO_START=false
